<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/favoriteBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bandeau"
            android:textColor="#000000"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#11000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="10dp"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/favorite1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="16" >

            <RelativeLayout
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12" >

                <ImageView
                    android:id="@+id/favorite_img1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop" />
                
                 <View 
                    android:id="@+id/imgCenter1"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/favorite_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignEnd="@id/imgCenter1"
                    android:layout_alignParentBottom="true"
                    android:background="#88ffffff"
                    android:gravity="left|center_vertical"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/infos1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/info_txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:background="@drawable/white_back_rounded_corners"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/more_info"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorite2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="16" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12" >

                <ImageView
                    android:id="@+id/favorite_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                
                    <View 
                    android:id="@+id/imgCenter2"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/favorite_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignEnd="@id/imgCenter2"
                    android:layout_alignParentBottom="true"
                    android:background="#88ffffff"
                    android:gravity="left|center_vertical"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/info_txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:background="@drawable/white_back_rounded_corners"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/more_info"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

