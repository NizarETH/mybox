                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="#CC777777"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:lines="1"
                            android:maxLines="1"
