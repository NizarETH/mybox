<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_bar_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:weightSum="7"
        android:visibility="gone" >

	        <RelativeLayout
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="2" >
	
		        <TextView
		            android:id="@+id/return_back"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/back_order_return"
		            android:layout_centerVertical="true"
		            android:layout_alignParentLeft="true"
		            android:gravity="center"
	            	android:padding="5dp"
		            android:text="Commander en ligne" />
		        
	    	</RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="3" >

	        <TextView
	            android:id="@+id/title_dialog"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="Validez votre commande"
	            android:layout_centerInParent="true"
	            android:layout_centerVertical="true"
	            android:padding="5dp"
	            android:textColor="#AA777777"
	            android:textStyle="bold" />
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="2" >

	        <TextView
	            android:id="@+id/validate"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:background="@drawable/back_order_validate"
	            android:gravity="center"
	            android:padding="5dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:text="Valider" />
	
	    </RelativeLayout>
</LinearLayout>
    

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/top_bar_dialog" >
    </FrameLayout>

</RelativeLayout>