<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_overlay"
        android:layout_weight="16" >

        <ImageView
            android:id="@+id/favorite_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/captures" />

        <TextView
            android:id="@+id/favorite_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#88ffffff"
            android:gravity="center"
            android:padding="15dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:ellipsize="marquee"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/infos1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_txt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_back_rounded_corners"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:text="@string/more_info" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</LinearLayout>